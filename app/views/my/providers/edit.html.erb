<div class="column_twelve heading">
  <h2><%= t('company_profile.edit_headline') %></h2>
  
  <p class="plain-text"><%= t('company_profile.edit_description') %></p>
</div>

<hr class="clear" />

<% form_for @provider, :url => my_provider_path, :html => {:multipart => true, :class => 'plain-form'} do |f| -%>
  
  <%= f.error_messages %>

  <%- if current_user.can_admin?(@provider) -%>
    <fieldset class="fields">
      <div class="field"><%= f.label :user_id, t("provider.admin") %> <%= f.select :user_id, @provider.users_for_select %></div>
    </fieldset>
  <%- end -%>
  
  <%= render :partial => 'providers/form', :locals => {:f => f} %>
  
  <fieldset class="buttons">
    <%= f.submit t('forms.save'), :class => 'copy-button' %> <div class="cop-out"><%= t('forms.or')%> <%= link_to t('forms.cancel'), @provider %></div>
  </fieldset>

<% end -%>