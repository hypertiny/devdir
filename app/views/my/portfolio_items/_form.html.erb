<%= f.error_messages %>

<fieldset class="fields">
  <div class="field"><%= f.label :name, t("portfolio_item.name") %> <%= f.text_field :name %></div>
  <div class="field"><%= f.label :url, t("portfolio_item.url") %> <%= f.text_field :url %></div>
	<div class="field"><%= f.label :year_completed, t("portfolio_item.year_completed") %> <%= f.select :year_completed, (2004..Time.now.year.to_i).collect { |y| y.to_s }.reverse %></div>
  <div class="field"><%= f.label :description, t("portfolio_item.description") %> <%= f.text_area :description %></div>
</fieldset>

<fieldset class="buttons">
  <%= f.submit t('forms.save'), :class => 'copy-button' %> <div class="cop-out"><%= t('forms.or') %> <%= link_to t('forms.cancel'), my_portfolio_items_path %></div>
</fieldset>