<div class="column_twelve heading">
  <h2><%= t('forms.sign_in') %></h2>
</div>

<hr class="clear" />

<div class="column_twelve">
  <% form_for @session, :url => session_path, :html => { :class => 'plain-form' } do |f| -%>
  
    <%= f.error_messages %>

    <fieldset class="fields">
      <div class="field">
        <%= f.label :email, t("user.email") %>
        <%= f.text_field :email %>
      </div>

      <div class="field">
        <%= f.label :password, t("user.password") %>
        <%= f.password_field :password %>
      </div>

      <div class="field tick">
        <%= f.check_box :remember_me %><%= f.label :remember_me, t('user.remember_me') %>
      </div>
    </fieldset>

    <fieldset class="buttons">
      <%= f.submit t('forms.sign_in'), :class => 'copy-button' %>
      <div class="cop-out"><%= link_to t('user.forgot_password'), new_password_reset_path %></div>
    </fieldset>
  <% end -%>
</div>